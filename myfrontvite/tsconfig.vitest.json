{
  "extends": "./tsconfig.app.json",
  "exclude": [],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // 確保 '@/api/*' 指向正確的路徑
    },
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",

    "lib": ["dom", "es2015"], // 確保包含 'dom' 和其他所需的 ECMAScript 版本
    "types": ["node", "jsdom"]
  }
}
