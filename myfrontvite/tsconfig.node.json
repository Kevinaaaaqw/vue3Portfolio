{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/icons",
    "src/*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "lib": ["dom", "es2015"], // 確保包含 'dom' 和其他所需的 ECMAScript 版本

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
